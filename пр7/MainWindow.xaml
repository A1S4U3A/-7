<Window x:Class="пр7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ха-нойская башня" Height="350" Width="525">
    <Grid>
        <Label Content="Введите количество дисков:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="DisksInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="200,10,0,0"/>
        <Button Content="Запустить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="270,10,0,0" Click="StartButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" TextWrapping="Wrap" Width="480" Height="250"/>
    </Grid>
</Window>
